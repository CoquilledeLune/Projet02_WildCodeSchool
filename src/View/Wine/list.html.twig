{% extends "Shared/admin.html.twig" %}

{% block content %}
	<main class="container">
		<div class="row">
			<h1 class="text-center m-3">Liste des super produits !</h1>
		</div>

		<div class="container d-flex flex-column">
		<table class="table col align-self-center">
			<thead>
				<tr>
					<th>Nom du produit</th>
					<th>Modifier</th>
					<th>Supprimer</th>
				</tr>
			</thead>
			<tbody>

				{% for wine in wines %}
					<tr>
						<td>
							<a href="/wines/show?id={{ wine.id }}">{{ wine.name }}</a>
						</td>
						<td class="container flex-column">
							<a class="btn btn-xl align-self-center" href="/wines/edit?id={{wine.id}}" role="button"><i class="bi bi-pencil-fill"></i></a>
						</td>
						<td class="container flex-column">
							<form action="/wines/delete" method="POST">
								<input type="hidden" name="id" value="{{ wine.id }}">
								<button class="btn btn-xl align-self-center" role="button"><i class="bi bi-trash3-fill"></i></button>
							</form>
						</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
		<div class="col align-self-center">
		<button>
			<a href="/wines/add">Ajouter un produit</a>
		</button>
		</div>
		</div>
	</main>

{% endblock %}
