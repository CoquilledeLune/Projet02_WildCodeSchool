<form method="post">
					<input type="hidden" value="{{ wine.id }}" name="id">
      <div>
          <label for="Nom du produit">Nom du produit :</label>
          <input type="text" value="{{ wine.name }}" id="name" name="name">
      </div>
      <div>
          <label for="Année">Année :</label>
          <input type="text" value="{{ wine.year }}" id="year" name="year">
      </div>
      <div>
          <label for="Prix">Prix :</label>
          <input type="number" value="{{ wine.price }}" id="price" name="price">
      </div>
      <div>
          <label for="Identifiant partenaire">Identifiant partenaire :</label>
          <input type="number" value="{{ wine.partner_id }}" id="partner_id" name="partner_id">
      </div>
  
      <div>
          <label for="description">Description :</label>
          <textarea id="description" value="{{ wine.description }}" name="description"></textarea>
      </div>
      <div  class="button">
        <button  type="add">Ajouter le produit</button>
      </div>
  </form>
