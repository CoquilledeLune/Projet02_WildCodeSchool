{% for wine in wines %}
	<div {% if loop.index0 == 0 %} class="carousel-item active" {% else %} class="carousel-item" {% endif %}>
		<img src="https://media.auchan.fr/P02000000000X2QPRIMARY_512x512/B2CD/%22/%3E" class="card-img-top" alt="Bouteille de vin">
		<div class="card-body d-flex flex-column">
			<h3 class="card-title text-center mt-2">{{wine.name}}</h3>
			<h4 class="card-subtitle text-center m-1">{{wine.price}}€</h4>
			<h4 class="card-subtitle text-center m-1">Cuvée :
				{{wine.year}}</h4>
			<div class="card-text">{{wine.description}}</div>
			<button class="align-self-center">
				<a href="wines/show?id={{ wine.id }}">Détails</a>
			</button>
		</div>
	</div>
{% endfor %}
