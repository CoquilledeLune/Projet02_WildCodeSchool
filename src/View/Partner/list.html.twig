{% extends "layout.html.twig" %}

{% block content %}
	<main class="container">
		<div class="row">
			<h1 class="text-center m-3">Liste des super partenaires !</h1>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th>Nom du partenaire</th>
					<th>Editer</th>
					<th>Supprimer</th>
				</tr>
			</thead>
			<tbody>

				{% for partner in partners %}
					<tr>
					    <td><a href="/partner/show?id={{ partner.id }}">{{ partner.id }}. {{ partner.firstname }} {{ partner.lastname }}</a></td>
						<td><a href="/partner/edit?id={{ partner.id }}">Editer</a></td>
						<td><a href="/partner/delete">Supprimer</a></td>
					</tr>
				{% endfor %}

			</tbody>
		</table>

	</main>

{% endblock %}
