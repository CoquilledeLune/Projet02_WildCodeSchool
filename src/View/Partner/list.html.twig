{% extends "Shared/admin.html.twig" %}
{% block content %}
	<main class="container">
		<div class="row">
			<h1 class="text-center m-5">Liste des super partenaires !</h1>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th>Nom du partenaire</th>
					<th>Modifier</th>
					<th>Supprimer</th>
				</tr>
			</thead>
			<tbody>

				{% for partner in partners %}
					<tr>
						<td>
							<a href="/partners/show?id={{ partner.id }}">{{ partner.id }}.
								{{ partner.firstname }}
								{{ partner.lastname }}</a>
						</td>
						<td>
							<button>
								<a href="/partners/edit?id={{ partner.id }}">Modifier</a>
							</button>
						</td>
						<td>
							<form action="/partners/delete" method="POST">
								<input type="hidden" name="id" value="{{ partner.id }}">
								<button>Supprimer</button>
							</td>
						</td>
					</tr>
				{% endfor %}


			</tbody>
		</table>

		<button>
			<a href="/partners/add">Ajouter un partenaire</a>
		</button>

	</main>
{% endblock %}
