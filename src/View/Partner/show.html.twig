{% extends "Shared/admin.html.twig" %}
{% block content %}
	<main class="container">
		<h1>Partenaire
			{{ partner.firstname }}
			{{ partner.lastname }}</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id du partenaire</th>
					<th>Prénom</th>
					<th>Nom</th>
					<th>Adresse</th>
					<th>E-mail</th>
					<th>Téléphone</th>
					<th>Description</th>
					<th>Modifier</th>
					<th>Supprimer</th>
				</tr>
			</thead>
			<tbody>

				<tr>
					<td>
						{{ partner.id }}
					</td>
					<td>
						{{ partner.firstname }}
					</td>
					<td>
						{{ partner.lastname }}
					</td>
					<td>
						{{ partner.address }}
					</td>
					<td>
						{{ partner.email }}
					</td>
					<td>
						{{ partner.phone }}
					</td>
					<td>
						{{ partner.description }}
					</td>
					<td>
						<button>
							<a href="/partners/edit?id={{ partner.id }}">Modifier</a>
						</button>
					</td>
					<td>
						<form action="/partners/delete" method="POST">
							<input type="hidden" name="id" value="{{ partner.id }}">
							<button>Supprimer</button>
						</form>

					</td>
				</tr>
			</tbody>
		</td>
	</tr>
</tbody></table><button>
<a href="/partners">Retour</a></button></main>{% endblock %}
